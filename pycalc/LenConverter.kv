
#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import hex kivy.utils.get_color_from_hex

<ConvertButton@Button>:
    font_size: 30
    background_color:[23,33,48,0.1]
    size:[5,20]
	canvas.before:
		Color:
			rgba:[23,33,48,0.1]
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[10]


<ConverterGridLayout>:
    id: converter
	display: entry
	rows: 6
	padding:[15,5,15,50]
	spacing:5


    Button:
        text: 'My first Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item1')
    Label:
        text: 'Unselectable item'
        size_hint_y: None
        height: 44
    Button:
        text: 'My second Item'
        size_hint_y: None
        height: 44
        on_release: root.select('item2')