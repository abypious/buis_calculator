#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import hex kivy.utils.get_color_from_hex
<CustButton@Button>:
	font_size: 30
    background_color:[23,33,48,0.1]
    size:50,20

<MainScreen>:
    GridLayout:
        cols: 1
        Button:
            text: 'Go to Calculator'
            on_release: app.switch_to_calculator()

# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
	id: calculator
	display: entry
	rows: 6
	padding: 10
	spacing: 10
    
	

	# Where input is displayed
	BoxLayout:
		TextInput:
			id: entry
			font_size: 32
			multiline: False 
			size:50,50
			background_color:hex('#181819')
			forground_color:hex('#FFFFFF')
			
	# When buttons are pressed update the entry
	BoxLayout:
		spacing: 10
		CustButton:
			text: "D"
			on_press: entry.text += self.text
            
		CustButton:
			text: "%"
			on_press: entry.text += self.text
		CustButton:
			text: "C"
			on_press: entry.text += self.text
		CustButton:
			text: "-"
			on_press: entry.text += self.text

	BoxLayout:
		spacing: 10
		CustButton:
			text: "7"
			on_press: entry.text += self.text
			size: 75,50
		CustButton:
			text: "8"
			on_press: entry.text += self.text
		CustButton:
			text: "9"
			on_press: entry.text += self.text
		CustButton:
			text: "x"
			on_press: entry.text += self.text

	BoxLayout:
		spacing: 10
		CustButton:
			text: "4"
			on_press: entry.text += self.text
		CustButton:
			text: "5"
			on_press: entry.text += self.text
		CustButton:
			text: "6"
			on_press: entry.text += self.text
		CustButton:
			text: "-"
			on_press: entry.text += self.text

	# When equals is pressed pass text in the entry
	# to the calculate function
	BoxLayout:
		spacing: 10
		CustButton:
			text: "1"
			on_press: entry.text = ""
		CustButton:
			text: "2"
			on_press: entry.text += self.text
		CustButton:
			text: "3"
			on_press: calculator.calculate(entry.text)
            
		CustButton:
			text: "+"
			on_press: entry.text += self.text
	BoxLayout:
		spacing: 10
		CustButton:
			text: "AC"
			on_press: entry.text = ""
		CustButton:
			text: "0"
			on_press: entry.text += self.text
		CustButton:
			text: "."
			on_press: calculator.calculate(entry.text)
            
		CustButton:
    		background_color:hex('#3f9191')
			text: "="
			on_press: calculator.calculate(entry.text)
	 
