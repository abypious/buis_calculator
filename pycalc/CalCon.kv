#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window
#:import hex kivy.utils.get_color_from_hex


<CustButton@Button>:
	font_size: 30
    background_color:[23,33,48,0.1]
    size:[5,20]
	canvas.before:
		Color:
			rgba:[23,33,48,0.1]
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[10]	



<NumButton@Button>:
	font_size: 30
    background_color:[23,33,48,0.1]
    size:[5,20]
	canvas.before:
		Color:
			rgba:hex('##3f3e40')
		RoundedRectangle:
			size:self.size
			pos:self.pos
			radius:[10]	

<CustomButton@Button>:
    font_size: 30
    background_color:[23,33,48,0.1]
    size:[5,20]

<MainScreen>:
    GridLayout:
        cols: 1
        CustomButton:
            text: 'Go to Calculator'
            on_release: app.switch_to_calculator()  # Action when released

# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
	id: calculator
	display: entry
	rows: 6
	padding:[15,5,15,50]
	spacing:5
    
	

	# Where input is displayed
	BoxLayout:
		padding:0
		spacing:0
		TextInput:
			id: entry
			font_size: 50
			multiline: False 
			readonly:True
			background_color:hex('#000000')
            hint_text:'0'
            hint_text_color:[0.5, 0.5, 0.5, 1]  # Gray color for hint text
        	foreground_color:[1, 1, 1, 1]
			cursor_color:[1, 1, 1, 1]
			input_filter:"int"
			base_direction: 'rtl'
	BoxLayout:
		padding:2.5
		spacing:5
		CustButton:
			text: "<"
			on_press: entry.text = entry.text[:-1]
		CustButton:
			text: "%"
			on_release:calculator.update_display("%")
			size: 75,50
		CustButton:
			text: "^"
			on_release:calculator.update_display("**")
			size: 75,50
		CustButton:
			text: "/"
			on_release:calculator.update_display("/")
			size: 75,50
	
	BoxLayout:
		padding:2.5
		spacing:5
		NumButton:
			text: "7"
			on_release:calculator.update_display("7")
			size: 75,50

		NumButton:
			text: "8"
			on_release:calculator.update_display("8")
			size: 75,50
		NumButton:
			text: "9"
			on_release:calculator.update_display("9")
			size: 75,50
		CustButton:
			text: "x"
			on_release:calculator.update_display("*")
			size: 75,50

	BoxLayout:
		padding:2.5
		spacing:5
		border_radius:20,20,20,20
		NumButton:
			text: "4"
			on_release:calculator.update_display("4")
			size: 75,50

		NumButton:
			text: "5"
			on_release:calculator.update_display("5")
			size: 75,50

		NumButton:
			text: "6"
			on_release:calculator.update_display("6")
			size: 75,50

		CustButton:
			text: "-"
			on_release:calculator.update_display("-")
			size: 75,50

	# When equals is pressed pass text in the entry
	# to the calculate function
	BoxLayout:
		padding:2.5
		spacing:5
		NumButton:
			text: "1"
			on_release:calculator.update_display("1")
			size: 75,50

		NumButton:
			text: "2"
			on_release:calculator.update_display("2")
			size: 75,50

		NumButton:
			text: "3"
			on_release:calculator.update_display("3")
			size: 75,50
            
		CustButton:
			text: "+"
			on_release:calculator.update_display("+")
			size: 75,50
	
	
	BoxLayout:
		padding:2.5
		spacing:5
		CustButton:
			text: "AC"
			on_press: entry.text = ""
			size: 75,50
		NumButton:
			text: "0"
			on_release:calculator.update_display("0")
			size: 75,50
		CustButton:
			text: "."
			on_release:calculator.update_display(".")
			size: 75,50
            
		CustButton:
			text: "="
			on_release: calculator.calculate(entry.text)
			canvas.before:
				Color:
					rgba:hex('#3f9191')
				RoundedRectangle:
					size:self.size
					pos:self.pos
					radius:[10]	

	 
